<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout android:id="@+id/left_layout"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/left_msg_time"
                android:text="02-16 19:16"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/left_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/head1" />
            <LinearLayout android:id="@+id/left_msg"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/news_left"
                    >
                    <TextView  android:id="@+id/left_msg_content"
                        android:text="你好！嘉善大道basodbas9d阿萨德吧as9d"
                        android:maxEms="13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/right_layout"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/right_msg_time"
            android:paddingTop="5dp"
            android:gravity="center"
            android:textSize="12dp"
            android:visibility="visible"
            android:text="02-16 19:16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">
            <LinearLayout android:id="@+id/right_msg"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/news_right"
                    >
                    <TextView android:id="@+id/right_msg_content"
                        android:text="你好！"
                        android:maxEms="13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/right_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/head1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

